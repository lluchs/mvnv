{{! Shows a single score. }}
{{<layout}}
	{{$content}}
		<h1>Notensatz</h1>

		{{>messages}}

		<h2>{{title}}</h2>
		<dl class="dl-horizontal">
			<dt>ID</dt>
			<dd>{{id}}{{^id}}<i class=muted>?</i>{{/id}}</dd>
			<dt>Komponist</dt>
			<dd>{{composer}}</dd>
			<dt>Jahr</dt>
			<dd>{{year}}{{^year}}<i class=muted>?</i>{{/year}}</dd>
			<dt>Verlag</dt>
			<dd>{{publisher}}{{^publisher}}<i class=muted>?</i>{{/publisher}}</dd>
		</dl>

		<a class="btn" href="/scores/{{_id}}/edit">Bearbeiten</a>
	{{/content}}
{{/layout}}
